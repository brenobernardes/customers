<h1>Customer</h1>

<table>
	<tr>
	    <th>First Name</th>
    	<th>Last Name</th>
	    <th>Email</th>
	    <th>Actions</th>
	</tr>

	<tr>
	    <td><%= @customer.first_name %></td>
	    <td><%= @customer.last_name %></td>
	    <td><%= @customer.email %></td>
	    <td>
	    	<%= link_to "Edit", edit_customer_path(@customer) %>

	    	|

	    	<%= link_to "Delete", customer_path(@customer), data: {
	    		turbo_method: :delete,
	    		turbo_confirm: "Are you sure?"
	    	} %>
	    </td>    	
	</tr>
</table>